# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/grid
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/grid

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# IPFS Configuration (Pinata)
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret-api-key
PINATA_JWT=your-pinata-jwt-token
PINATA_GATEWAY=your-gateway.mypinata.cloud
IPFS_GATEWAY=https://your-gateway.mypinata.cloud

# Story Protocol Configuration
STORY_API_KEY=your-story-protocol-api-key
STORY_CHAIN_ID=1315
STORY_RPC_URL=https://aeneid.storyrpc.io
STORY_EXPLORER_URL=https://aeneid.storyscan.io

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Backend Wallet Private Key (for signing transactions)
# ⚠️  WARNING: Keep this secret! Never commit to git or share publicly
# Get your private key from MetaMask: Account Details → Export Private Key
# This wallet needs test ETH on Story Aeneid Testnet
BACKEND_PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Smart Contract Addresses (populated after deployment)
REPOSITORY_CONTRACT_ADDRESS=0x59e4338E9da115A04603D1C11b8BD20F97f4e3B0
REPO_NFT_ADDRESS=
LICENSE_NFT_ADDRESS=
LICENSE_MANAGER_ADDRESS=

# Encryption Configuration
# Generate a secure 32-byte key: openssl rand -base64 32
KEK=your_32_byte_base64_encoded_key_here