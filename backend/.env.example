# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/grid
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/grid

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# IPFS Configuration (Pinata)
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret-api-key
PINATA_JWT=your-pinata-jwt-token
PINATA_GATEWAY=your-gateway.mypinata.cloud
IPFS_GATEWAY=https://your-gateway.mypinata.cloud

# Story Protocol Configuration
STORY_API_KEY=your-story-protocol-api-key
STORY_CHAIN_ID=1315
STORY_RPC_URL=https://aeneid.storyrpc.io
STORY_EXPLORER_URL=https://aeneid.storyscan.io

# Smart Contract (populated after deployment)
REPOSITORY_CONTRACT_ADDRESS=your-deployed-repository-contract-address

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001


